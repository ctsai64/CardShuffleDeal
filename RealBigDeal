#include "Adafruit_LiquidCrystal.h"

/* =======================
   PIN ASSIGNMENTS (UNO)
   ======================= */
const int motorL  = 2;    // Shuffle Left (single direction)
const int motorR  = 3;    // Shuffle Right (single direction)
const int motorD1 = 4;    // Deal forward
const int motorD2 = 5;    // Deal backward
const int motorS  = 6;    // Shooter (single direction)

const int STEP_PIN   = 7;
const int DIR_PIN    = 8;
const int ENABLE_PIN = 9;

const int butCardUp   = 10;
const int butCardDown = A0;
const int butPlayUp   = A1;
const int butPlayDown = A2;
const int butStart    = A3;

/* =======================
   CONSTANTS
   ======================= */
const unsigned long shuffleRunTime = 300;
const unsigned long shuffleDelay   = 1000;

const unsigned long dealForwardTime  = 200;
const unsigned long dealBackwardTime = 150;
const unsigned long dealDelay        = 35;

const int STEPS_PER_REV = 200;
const int MICROSTEPPING = 16;
const int STEP_DELAY_US = 90;

int numPlayers = 4;
int numCards   = 52;

Adafruit_LiquidCrystal lcd(0);

/* =======================
   MOTOR HELPERS
   ======================= */
void motorPulse(int pin, unsigned long t) {
  digitalWrite(pin, HIGH);
  delay(t);
  digitalWrite(pin, LOW);
}

void motorForward(int pin1, int pin2, unsigned long t) {
  digitalWrite(pin1, HIGH);
  digitalWrite(pin2, LOW);
  delay(t);
  digitalWrite(pin1, LOW);
  digitalWrite(pin2, LOW);
}

void motorBackward(int pin1, int pin2, unsigned long t) {
  digitalWrite(pin1, LOW);
  digitalWrite(pin2, HIGH);
  delay(t);
  digitalWrite(pin1, LOW);
  digitalWrite(pin2, LOW);
}

void allOff() {
  digitalWrite(motorL, LOW);
  digitalWrite(motorR, LOW);
  digitalWrite(motorD1, LOW);
  digitalWrite(motorD2, LOW);
  digitalWrite(motorS, LOW);
}

/* =======================
   ACTIONS
   ======================= */
void runShuffleLeft()  { motorPulse(motorL, shuffleRunTime); }
void runShuffleRight() { motorPulse(motorR, shuffleRunTime); }

void runAlternate() {

  // -------- WAIT FOR START RELEASE (VERY IMPORTANT) --------
  while (!digitalRead(butStart)) {
    delay(10);
  }

  delay(50); // safety debounce after release

  // -------- SHUFFLE LOOP --------
  while (true) {

    runShuffleLeft();
    allOff();
    delay(shuffleDelay);

    // EXIT only on NEW press
    if (!digitalRead(butStart)) break;

    runShuffleRight();
    allOff();
    delay(shuffleDelay);

    // EXIT only on NEW press
    if (!digitalRead(butStart)) break;
  }

  // -------- WAIT FOR RELEASE BEFORE RETURNING --------
  while (!digitalRead(butStart)) {
    delay(10);
  }

  delay(200); // exit debounce
}


void runDealForward()  { motorForward(motorD1, motorD2, dealForwardTime); }
void runDealBackward() { motorBackward(motorD1, motorD2, dealBackwardTime); }

void shooterOn()  { digitalWrite(motorS, HIGH); }
void shooterOff() { digitalWrite(motorS, LOW); }

/* =======================
   STEPPER
   ======================= */
long degreesToSteps(float degrees) {
  return (long)((STEPS_PER_REV * MICROSTEPPING * degrees) / 360.0);
}

void rotateDegrees(float degrees) {
  long steps = abs(degreesToSteps(degrees));
  digitalWrite(DIR_PIN, degrees > 0);
  digitalWrite(ENABLE_PIN, LOW);

  for (long i = 0; i < steps; i++) {
    digitalWrite(STEP_PIN, HIGH);
    delayMicroseconds(STEP_DELAY_US);
    digitalWrite(STEP_PIN, LOW);
    delayMicroseconds(STEP_DELAY_US);
  }
  digitalWrite(ENABLE_PIN, HIGH);
}

/* =======================
   LCD
   ======================= */
void updateLCD() {
  lcd.clear();
  lcd.setCursor(0,0);
  lcd.print("Players: ");
  lcd.print(numPlayers);
  lcd.setCursor(0,1);
  lcd.print("Cards: ");
  lcd.print(numCards);
}

void lcdShufflingAnimation() {
  lcd.clear();
  lcd.print("Shuffling...");
}

void lcdDealingAnimation() {
  lcd.clear();
  lcd.print("Dealing...");
}

/* =======================
   TEST MODE
   ======================= */
void runTestMode() {
  lcd.clear();
  lcd.print("TEST MODE");
  lcd.setCursor(0,1);
  lcd.print("Ready");

  Serial.println("\n=== TEST MODE ===");

  while (true) {

    if (!digitalRead(butStart)) {
      lcd.clear();
      lcd.print("Exit Test");
      delay(500);
      updateLCD();
      return;
    }

    if (!digitalRead(butPlayUp)) {
      lcd.clear();
      lcd.print("Shuffle L");
      runShuffleLeft();
      delay(shuffleDelay);

      lcd.clear();
      lcd.print("Shuffle R");
      runShuffleRight();
      delay(shuffleDelay);

      lcd.clear();
      lcd.print("TEST MODE");
    }

    if (!digitalRead(butPlayDown)) {
      lcd.clear();
      lcd.print("Shooter");
      shooterOn();
      delay(1000);
      shooterOff();

      lcd.clear();
      lcd.print("Deal");
      runDealForward();
      delay(300);

      lcd.clear();
      lcd.print("TEST MODE");
    }

    if (!digitalRead(butCardUp)) {
      lcd.clear();
      lcd.print("Rotate 180");
      rotateDegrees(180);
      delay(300);
      lcd.clear();
      lcd.print("TEST MODE");
    }

    if (!digitalRead(butCardDown)) {
      lcd.clear();
      lcd.print("System OK");
      delay(500);
      lcd.clear();
      lcd.print("TEST MODE");
    }
  }
}

/* =======================
   SETUP
   ======================= */
void setup() {
  Serial.begin(9600);
  Serial.println("Boot");

  pinMode(motorL, OUTPUT);
  pinMode(motorR, OUTPUT);
  pinMode(motorD1, OUTPUT);
  pinMode(motorD2, OUTPUT);
  pinMode(motorS, OUTPUT);

  pinMode(STEP_PIN, OUTPUT);
  pinMode(DIR_PIN, OUTPUT);
  pinMode(ENABLE_PIN, OUTPUT);
  digitalWrite(ENABLE_PIN, HIGH);

  pinMode(butPlayUp, INPUT_PULLUP);
  pinMode(butPlayDown, INPUT_PULLUP);
  pinMode(butCardUp, INPUT_PULLUP);
  pinMode(butCardDown, INPUT_PULLUP);
  pinMode(butStart, INPUT_PULLUP);

  lcd.begin(16,2);
  allOff();
  updateLCD();
}

/* =======================
   LOOP
   ======================= */
void loop() {

  static unsigned long testHoldStart = 0;

  if (!digitalRead(butPlayUp) && !digitalRead(butCardDown)) {
    if (testHoldStart == 0) testHoldStart = millis();
    if (millis() - testHoldStart >= 1000) {
      runTestMode();
      testHoldStart = 0;
    }
  } else {
    testHoldStart = 0;
  }

  if (Serial.available()) {
    String cmd = Serial.readStringUntil('\n');
    cmd.trim();
    if (cmd == "TEST") runTestMode();
  }

  if (!digitalRead(butPlayUp))   { numPlayers++; updateLCD(); delay(200); }
  if (!digitalRead(butPlayDown)) { if (numPlayers > 1) numPlayers--; updateLCD(); delay(200); }

  if (!digitalRead(butCardUp))   { numCards++; updateLCD(); delay(200); }
  if (!digitalRead(butCardDown)) { if (numCards > 1) numCards--; updateLCD(); delay(200); }

  if (!digitalRead(butStart)) {

    lcdShufflingAnimation();
    runAlternate();   // press START again to exit shuffle

    lcdDealingAnimation();
    float angle = 360.0 / numPlayers;

    shooterOn();
    while (true) {
      if (!digitalRead(butStart)) break;
      runDealForward();
      delay(dealDelay);
      runDealBackward();
      delay(shuffleDelay);
      rotateDegrees(angle);
    }
    shooterOff();

    lcd.clear();
    lcd.print("Finished!");
    delay(1500);
    updateLCD();
  }
}
